<div class="container">
  <h2 class="col-sm-offset-2">{{__ "issue.menu.edit_issue" }}</h2>
   <ul class="nav nav-tabs" role="tablist">
    <li class="active">
      <a href="#">
        <span class="glyphicon glyphicon-edit"></span> {{__ "common.actions.edit" }}
      </a>
    </li>
    <li>
      <a href="{{ pricesPath }}" id="prices-issue-link">
        <span class="glyphicon glyphicon-stats"> {{__ "common.nouns.prices" }}
      </a>
    </li>
  </ul>

  <form class="listing-form form-horizontal" enctype="multipart/form-data">

    {{partial "issues/form"}}
    
    <div class="form-actions col-sm-offset-2">
      <button type="submit" class="save btn btn-primary">{{__ "common.actions.save" }}</button>
      <a href="{{ cancelPath }}" class="cancel btn btn-default">{{__ "common.actions.cancel" }}</a>
    </div>
  </form>
</div>